import java.util.Scanner;

public class welcome {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        String s1 = scan.nextLine();
        int n  = s1.length();

        for (int i =0; i < n; i++) {
            for(int j=0; j<n;j++){
                if(j==i || j == n-1-i){
                    System.out.print(s1.charAt(i));
                }
                System.out.print(" ");
            }
            System.out.println();
        }
    }
}
